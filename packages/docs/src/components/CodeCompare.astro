---
interface Props {
  leftLabel?: string;
  rightLabel?: string;
}

const { leftLabel = 'Expression', rightLabel = 'Compiled Output' } = Astro.props;
---

<div class="code-compare">
  <div class="code-compare-col">
    <div class="code-compare-label">{leftLabel}</div>
    <div class="code-compare-content">
      <slot name="left" />
    </div>
  </div>
  <div class="code-compare-col code-compare-col-wide">
    <div class="code-compare-label">{rightLabel}</div>
    <div class="code-compare-content">
      <slot name="right" />
    </div>
  </div>
</div>

<style>
  .code-compare {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin: 1rem 0;
  }

  .code-compare-col {
    flex: 1;
    min-width: 0;
    margin: 0 !important;
  }

  .code-compare-col-wide {
    flex: 1.5;
  }

  .code-compare-label {
    font-weight: 600;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--sl-color-accent);
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  .code-compare-content {
    margin: 0 !important;
  }

  .code-compare-content :global(.expressive-code) {
    margin: 0 !important;
  }

  @media (max-width: 600px) {
    .code-compare {
      flex-direction: column;
    }
    .code-compare-col-wide {
      flex: 1;
    }
  }
</style>
