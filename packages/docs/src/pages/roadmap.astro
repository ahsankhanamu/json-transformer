---
import Roadmap from '../components/Roadmap.svelte';
import ThemeToggle from '../components/ThemeToggle.svelte';
import '../styles/custom.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Roadmap | JSON Transformer</title>
    <meta name="description" content="See what's coming next for JSON Transformer - a query and transformation language that compiles to JavaScript." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline>
      // Theme detection - sync with Starlight
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('starlight-theme')) {
          return localStorage.getItem('starlight-theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      document.documentElement.dataset.theme = theme;
    </script>
  </head>
  <body>
    <nav class="page-nav">
      <a href="/" class="nav-brand">JSON Transformer</a>
      <div class="nav-links">
        <a href="/guides/introduction">Docs</a>
        <a href="/changelog">Changelog</a>
        <a href="/roadmap" class="active">Roadmap</a>
        <a href="/playground">Playground</a>
        <a href="https://github.com/ahsankhanamu/json-transformer" target="_blank" rel="noopener">GitHub</a>
        <ThemeToggle client:load />
      </div>
    </nav>
    <main>
      <Roadmap client:load />
    </main>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  body {
    background: #ffffff;
    color: #1e293b;
    min-height: 100vh;
  }

  [data-theme='dark'] body {
    background: #0f172a;
    color: #f1f5f9;
  }

  main {
    padding: 2rem 1rem;
  }

  .page-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    border-bottom: 1px solid #e2e8f0;
    background: #ffffff;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  [data-theme='dark'] .page-nav {
    background: #0f172a;
    border-bottom-color: #1e293b;
  }

  .nav-brand {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1e293b;
    text-decoration: none;
  }

  [data-theme='dark'] .nav-brand {
    color: #f1f5f9;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-links a {
    font-size: 0.9rem;
    color: #64748b;
    text-decoration: none;
    transition: color 0.15s;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: #6366f1;
  }

  [data-theme='dark'] .nav-links a {
    color: #94a3b8;
  }

  [data-theme='dark'] .nav-links a:hover,
  [data-theme='dark'] .nav-links a.active {
    color: #818cf8;
  }

  @media (max-width: 640px) {
    .page-nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .nav-links {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }
  }
</style>
